{
    "manifest_version": 2,
    "name": "MyHistory",
    "version": "1.0.0.2",
    "description": "历史管理增强",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "MyHistory",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "js/status.js"
        ]
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}
